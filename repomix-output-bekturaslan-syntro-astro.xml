<file path="astro.config.mjs">
 1: import { defineConfig, fontProviders } from "astro/config";
 2: import sitemap from "@astrojs/sitemap";
 3: import tailwindcss from "@tailwindcss/vite";
 4: export default defineConfig({
 5:   site: "https://yoursite.com",
 6:   experimental: {
 7:     fonts: [
 8:       {
 9:         provider: fontProviders.google(),
10:         name: "Inter",
11:         cssVariable: "--font-sans",
12:         weights: [400, 500],
13:       }
14:     ],
15:   },
16:   integrations: [sitemap()],
17:   vite: {
18:     plugins: [tailwindcss()],
19:   },
20: });
</file>

