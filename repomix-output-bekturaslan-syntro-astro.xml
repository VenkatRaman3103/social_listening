  1: ---
  2: import type { ImageMetadata } from "astro";
  3: import { Image } from "astro:assets";
  4: 
  5: interface BaseProps {
  6:   src: string;
  7:   alt?: string;
  8:   width?: number | string;
  9:   height?: number | string;
 10:   class?: string;
 11:   style?: any;
 12:   [key: string]: any;
 13: }
 14: 
 15: interface InlineSvgProps extends BaseProps {
 16:   inlineSvg: true;
 17:   alt?: string; // Optional for inline SVGs
 18: }
 19: 
 20: interface ImageProps extends BaseProps {
 21:   inlineSvg?: false;
 22:   alt: string; // Required for images
 23:   layout?: "responsive" | "full-width" | "none";
 24:   loading?: "eager" | "lazy";
 25:   decoding?: "async" | "auto" | "sync";
 26:   formats?: string[] | "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
 27: }
 28: 
 29: type Props = InlineSvgProps | ImageProps;
 30: 
 31: const {
 32:   src,
 33:   alt = "",
 34:   inlineSvg = false,
 35:   width,
 36:   height,
 37:   loading = "lazy",
 38:   decoding = "async",
 39:   formats,
 40:   style,
 41:   ...rest
 42: } = Astro.props as Props;
 43: 
 44: // Validation
 45: if (!src) {
 46:   throw new Error("Image component requires a 'src' prop");
 47: }
 48: 
 49: if (!inlineSvg && !alt) {
 50:   throw new Error("Image component requires an 'alt' prop for accessibility");
 51: }
 52: 
 53: // Determine if this is a local image
 54: const isLocalImage =
 55:   !src.startsWith("http") &&
 56:   !src.startsWith("data:") &&
 57:   !src.startsWith("blob:");
 58: 
 59: let imageContent: string | undefined;
 60: let imageModule: Promise<{ default: ImageMetadata }> | undefined;
 61: 
 62: if (isLocalImage) {
 63:   // Normalize the path
 64:   const normalizedSrc = src.startsWith("/src/assets")
 65:     ? src
 66:     : `/src/assets/images${src.startsWith("/") ? src : "/" + src}`;
 67: 
 68:   try {
 69:     if (inlineSvg && normalizedSrc.endsWith(".svg")) {
 70:       // Load SVG as raw content for inline use
 71:       const rawSvgs = import.meta.glob("/src/assets/images/**/*.svg", {
 72:         query: "raw",
 73:         import: "default",
 74:       });
 75: 
 76:       if (rawSvgs[normalizedSrc]) {
 77:         const svgContent = (await rawSvgs[normalizedSrc]()) as string;
 78: 
 79:         // Add attributes to SVG
 80:         const attributes = Object.entries(rest)
 81:           .filter(([key]) => key !== "class") // Handle class separately
 82:           .map(([key, value]) => `${key}="${value}"`)
 83:           .join(" ");
 84: 
 85:         const classAttr = rest.class || Astro.props.class;
 86:         const widthAttr = width ? `width="${width}"` : "";
 87:         const heightAttr = height ? `height="${height}"` : "";
 88:         const styleAttr = style
 89:           ? `style="${
 90:               typeof style === "object"
 91:                 ? Object.entries(style)
 92:                     .map(([k, v]) => `${k}:${v}`)
 93:                     .join(";")
 94:                 : style
 95:             }"`
 96:           : "";
 97: 
 98:         imageContent = svgContent.replace(
 99:           "<svg",
100:           `<svg data-icon="true" ${classAttr ? `class="${classAttr}"` : ""} ${widthAttr} ${heightAttr} ${styleAttr} ${attributes}`
101:         );
102:       } else {
103:         console.warn(`SVG not found: ${normalizedSrc}`);
104:       }
105:     } else {
106:       // Load regular image
107:       const images = import.meta.glob(
108:         "/src/assets/images/**/*.{jpeg,jpg,png,webp,svg,gif}"
109:       );
110: 
111:       if (images[normalizedSrc]) {
112:         imageModule = images[normalizedSrc]() as Promise<{
113:           default: ImageMetadata;
114:         }>;
115:       } else {
116:         console.warn(
117:           `Image not found: ${normalizedSrc}. Available images:`,
118:           Object.keys(images)
119:         );
120:       }
121:     }
122:   } catch (error) {
123:     console.error(`Error loading image: ${normalizedSrc}`, error);
124:   }
125: }
